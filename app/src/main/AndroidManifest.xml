<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.projects.aldajo92.sumobt">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sumobt_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sumobt_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.projects.aldajo92.sumobt.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.projects.aldajo92.sumobt.activities.MainActivity"
            android:theme="@style/SplashTheme"/>
    </application>

</manifest>